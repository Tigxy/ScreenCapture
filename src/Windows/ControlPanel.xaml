<Window x:Class="ScreenCapture.ControlPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenCapture"
        mc:Ignorable="d"
        Title="ControlPanel" 
        SizeToContent="WidthAndHeight"
        WindowStyle="None"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        FontSize="18" FontWeight="SemiBold"
        Topmost="True"
        Loaded="Window_Loaded">
    <Grid Margin="0 3 0 0" Background="Transparent">
        <StackPanel Margin="2 2 2 2" Background="Transparent">
            <Button x:Name="CloseBtn" Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Padding="4" 
                    Background="White" FontSize="7" FontWeight="Bold" Click="Close_Click"/>
            <Button x:Name="NewBtn" Content="&#xE722;" FontFamily="Segoe MDL2 Assets" Padding="4" Background="White" Click="NewBtn_Click"/>
            <Button x:Name="SettingsBtn" Content="&#xE713;" FontFamily="Segoe MDL2 Assets" Padding="4" Background="White" Click="SettingsBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
